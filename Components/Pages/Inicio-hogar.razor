@page "/Inicio-hogar"

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comencemos con tu hogar</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            color: #333;
        }

        .form-container {
            padding: 20px;
            margin: auto;
            max-width: 400px;
            text-align: left;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        header h1 {
            font-size: 1.8rem;
            color: #007BFF;
            margin-bottom: 10px;
        }

        header p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 20px;
        }

        form label {
            display: block;
            margin: 10px 0 5px;
            font-weight: bold;
            color: #333;
        }

        form input {
            width: 100%;
            padding: 10px;
            border: 1px solid #007BFF;
            border-radius: 10px;
            margin-bottom: 20px;
            font-size: 1rem;
        }

        form input:focus {
            outline: none;
            border-color: #0056b3;
        }

        .btn-submit {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007BFF;
            color: white;
            border: 15px solid #007BFF;  /* Borde azul de 15px */
            border-radius: 10px;
            font-size: 1rem;
            cursor: pointer;
        }

        .btn-submit:hover {
            background-color: #0056b3;
            border-color: #0056b3;  /* Cambia el borde a un azul más oscuro */
        }
    </style>
</head>
<body>
    <div class="form-container">
        <header>
            <h1>Comencemos con tu hogar</h1>
            <p>Cuéntanos un poco más acerca de tu casa.</p>
        </header>
        <form>
            <label for="metros-cuadrados">Metros cuadrados de construcción</label>
            <input type="text" id="metros-cuadrados" placeholder="2,500 pies cuadrados" />

            <label for="residentes">Cantidad de residentes</label>
            <input type="text" id="residentes" placeholder="4 personas" />

            <button type="submit" class="btn-submit">Enviar</button>
        </form>
    </div>
</body>
</html>


