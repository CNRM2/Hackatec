@page "/dashboard"
@inject IJSRuntime JSRuntime

<h3>Dashboard de Consumo Energético y Agua</h3>

<div class="main-content">
    <!-- Barra superior -->
    <div class="topbar">
        <div class="topbar-left">
            <h1>Resumen de Consumo</h1>
        </div>
        <div class="topbar-right">
            <p>Usuario: @userName</p>
        </div>
    </div>

    <!-- Sección de índices -->
    <div class="content">
        <div class="card">
            <h3>Índice de Consumo Energético (kWh/m²/año)</h3>
            <p>@energyConsumptionIndex kWh/m²/año</p>
            <p><strong>Emisiones CO2eq:</strong> @energyCO2eq Ton CO2eq/año</p>
        </div>
        <div class="card">
            <h3>Consumo de Agua (m³/año)</h3>
            <p>@waterConsumption m³/año</p>
            <p><strong>Emisiones CO2eq:</strong> @waterCO2eq Ton CO2eq/año</p>
        </div>
        <div class="card">
            <h3>Recomendaciones</h3>
            <p>Ahorra energía con bombillas LED y electrodomésticos eficientes.</p>
            <p>Reduce el consumo de agua con sistemas de recirculación y ahorro de agua.</p>
        </div>
    </div>
</div>

<style>
    /* Estilos generales */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f0f2f5;
    }

    /* Contenido principal */
    .main-content {
        padding: 20px;
    }

    /* Barra superior */
    .topbar {
        display: flex;
        justify-content: space-between;
        background-color: #ffffff;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .topbar-left h1 {
        font-size: 1.6rem;
        color: #333;
    }

    .topbar-right p {
        font-size: 1rem;
        color: #333;
    }

    /* Sección de tarjetas */
    .content {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

        .card h3 {
            font-size: 1.4rem;
            margin-bottom: 10px;
        }

        .card p {
            font-size: 1.2rem;
            color: #333;
        }

            .card p strong {
                color: #007BFF;
            }
</style>

@code {
    // Datos de ejemplo para el dashboard
    private string userName = "Juan Pérez";
    private double energyConsumptionIndex = 150.5; // kWh/m²/año
    private double energyCO2eq = 1.2; // Ton CO2eq/año
    private double waterConsumption = 300; // m³/año
    private double waterCO2eq = 0.5; // Ton CO2eq/año
}
